<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenLoaiza.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="14" CornerRadius="0">
                <Label Text="Login" HorizontalTextAlignment="Center" TextColor="White" FontSize="24"/>
            </Frame>
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png" WidthRequest="65" HeightRequest="65" Margin="10,30"/>
            <Entry x:Name="txtUsuario" Placeholder="Usuario" Margin="50,10"></Entry>
            <Entry x:Name="txtPass" Placeholder="Contraseña" Margin="50,10"></Entry>
            <Button x:Name="btnLogin" Text="Iniciar" Margin="90,10" Clicked="btnLogin_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>